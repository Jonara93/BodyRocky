        <Style x:Key="BoutonOk" TargetType="Button">
            <Setter Property="Background" Value="#4785AF"/>
            <Setter Property="TextBlock.Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="BorderBrush" Value="#4785AF"/>
            <Setter Property="BorderThickness" Value="2px"/>
            <Setter Property="Border.CornerRadius" Value="10" />
            <Setter Property="Padding" Value="5px"/>
        </Style>
        <Style x:Key="BoutonAnnuler" TargetType="Button">
            <Setter Property="Background" Value="#EC1C1A"/>
            <Setter Property="TextBlock.Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="BorderBrush" Value="#EC1C1A"/>
            <Setter Property="BorderThickness" Value="2px"/>
            <Setter Property="Border.CornerRadius" Value="10" />
            <Setter Property="Padding" Value="5px"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#EFEFEF"/>
            <Setter Property="BorderBrush" Value="#000000"/>
            <Setter Property="BorderThickness" Value="2px"/>
        </Style>
    </Application.Resources>
</Application>
